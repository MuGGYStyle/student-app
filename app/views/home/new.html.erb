<div class="container p-5 my-5">
  <%= form_for @student_course, url: {action: :create} do |f| %>
    <% if @student_course.errors.any? %>
      <h2>Errors:</h2>
      <ul>
        <% @student_course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="mb-3">
      <label for="student_name" class="form-label">Student</label>
      <%= f.collection_select :student_id, Student.order(:first_name), :id, :first_name, {},  {class: 'form-select'} %>
    </div>
    <div class="mb-3">
      <label for="course_name" class="form-label">Course</label>
      <%= f.collection_select :course_id, Course.order(:name), :id, :name, {},  {class: 'form-select'} %>
    </div>
    <div class="mb-3">
      <label for="grade_point" class="form-label">Grade Point</label>
      <%= f.number_field :grade_point, in: 0.0..4.0, step: 0.1, class: 'form-control', placeholder: 'Enter between 0 to 4' %>
    </div>
    <%= link_to 'Back', { controller: 'home', action: 'index'}, class: 'btn btn-light' %>
    <button type="submit" class="btn btn-primary">Add</button>
  <% end %>
</div>