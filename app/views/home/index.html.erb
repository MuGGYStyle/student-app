<div class="container p-5 my-5">
  <div class="card">
    <div class="card-header">
      Student GPA list
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Student Name</th>
            <th scope="col">Total Credit</th>
            <th scope="col">GPA</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
          <tr>
            <th scope="row"><%= student.id %></th>
            <td><%= student.first_name %></td>
            <td><%= student.total_credit %></td>
            <td><%= student.gpa %></td>
            <td>
              <%= link_to 'Show', home_path(student) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>