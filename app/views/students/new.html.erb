<div class="container p-5 my-5">
  <%= form_for @student, url: {action: :create} do |f| %>
    <% if @student.errors.any? %>
      <h2>Errors:</h2>
      <ul>
        <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="mb-3">
      <label for="last_name" class="form-label">Last Name</label>
      <%= f.text_field :last_name, maxlength: 100, class: 'form-control in-valid', placeholder: 'Last Name' %>
    </div>
    <div class="mb-3">
      <label for="first_name" class="form-label">First Name</label>
      <%= f.text_field :first_name, maxlength: 100, class: 'form-control in-valid', placeholder: 'First Name' %>
    </div>
    <div class="mb-3">
      <label for="age" class="form-label">Age</label>
      <%= f.number_field :age, in: 1..100, step: 1, class: 'form-control', placeholder: 'Age' %>
    </div>
    <%= link_to 'Back', { controller: 'students', action: 'index'}, class: 'btn btn-light' %>
    <button type="submit" class="btn btn-primary">Add</button>
  <% end %>
</div>