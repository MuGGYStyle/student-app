<div class="container p-5 my-5">
  <%= form_for @course, url: {action: :create} do |f| %>
    <% if @course.errors.any? %>
      <h2>Errors:</h2>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="mb-3">
      <label for="name" class="form-label">Course Name</label>
      <%= f.text_field :name, maxlength: 100, class: 'form-control in-valid', placeholder: 'Course name' %>
    </div>
    <div class="mb-3">
      <label for="credit" class="form-label">Credit</label>
      <%= f.number_field :credit, in: 1..5, step: 1, class: 'form-control', placeholder: 'Credit' %>
    </div>
    <%= link_to 'Back', { controller: 'courses', action: 'index'}, class: 'btn btn-light' %>
    <button type="submit" class="btn btn-primary">Add</button>
  <% end %>
</div>